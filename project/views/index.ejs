<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <!-- Form Section -->
    <div class="form p-10">
      <form action="/create" method="post" class="space-y-3">
        <input 
          name="titles" 
          class="block text-white w-full rounded-md px-5 py-2 bg-zinc-800" 
          type="text" 
          placeholder="Title goes here" 
          required
        >
        <textarea 
          class="block text-white w-full rounded-md px-5 py-2 bg-zinc-800 resize-none" 
          placeholder="Write Your Tasks here" 
          name="details" 
          rows="4" 
          required
        ></textarea>
        <input 
          class="text-white bg-blue-600 px-5 py-2 rounded-md cursor-pointer hover:bg-blue-700 transition"
          type="submit" 
          value="Create Task"
        >
      </form>
    </div>

    <!-- Task Display Section -->
    <div class="tasks p-10 flex gap-4 flex-wrap">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-72 px-4 py-5 bg-zinc-800 rounded-md shadow-md hover:scale-105 transition">
            <h1 class="text-white text-xl font-semibold tracking-tight truncate"><%= val %></h1>
            <div class="flex justify-between m-2">
              <a class="text-blue-400 text-sm hover:underline" 
               href="/files/<%=val%>">Read more..</a>
               <a class="text-red-400"href="/edit/<%=val%>">Edit filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-600 text-lg">No Task Yet</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
